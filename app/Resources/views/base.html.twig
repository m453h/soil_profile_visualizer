<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/jquery-ui-1.12.1/jquery-ui.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery-ui-theme.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/jquery.filer/css/jquery.filer.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/jquery.filer/css/themes/jquery.filer-dragdropbox-theme.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/multi-select/css/multi-select.dist.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/perfect-scrollbar/css/perfect-scrollbar.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/select2-4.0.3/dist/css/select2.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/smartmenus-1.1.0/css/sm-core-css.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/smartmenus-1.1.0/css/sm-oda/sm-oda.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/leaflet/leaflet.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/bgrins-spectrum/spectrum.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body {% if section is defined %} class="outer" {% endif %}>
<div id="loader"><img src="{{ asset('images/loaders/ie_loader.gif') }}" alt="Loading"></div>
<div class="main-content" style="display:none;">
    {% block body %}

        <div class="col12 header white-space drop-shadow {% if section is not defined %}extended-header{% endif %}">
            {% if section is not defined %}
                <div class="top-bar">
                    <div class="section-inner">
                        <div class="col6 no-mobile">
                            <p>Today is {{ "now"|date("d M Y") }}</p>
                        </div>
                        <div class="col6 align-right last">
                            <p>{{ app.user.fullName }} [<a href="{{ path('logout') }}">Logout</a>]</p>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="section-inner">
                <div class="col2 align-left">
                    <a href='{{ path('app_home_page') }}'><img class="app-logo" src="{{ asset('images/logo/main-logo.png') }}" alt="Soil Mapper"></a>
                </div>
                <div class="col10 last">
                    <div id="menu-area">
                        {{ knp_menu_render('main',{'template': ':menu:menu.html.twig'}) }}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('vendor/jquery/jquery-1.9.1.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-ui-1.12.1/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-form-wizard/jquery.form.wizard.js') }}"></script>
    <script src="{{ asset('vendor/dropit-js/dropit.js') }}"></script>
    <script src="{{ asset('vendor/jquery.filer/js/jquery.filer.min.js') }}"></script>
    <script src="{{ asset('vendor/hongkhanh-cropbox/jquery/cropbox-min.js') }}"></script>
    <script src="{{ asset('vendor/multi-select/js/jquery.multi-select.js') }}"></script>
    <script src="{{ asset('vendor/jquery.quicksearch.js/jquery.quicksearch.js') }}"></script>
    <script src="{{ asset('vendor/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/select2-4.0.3/dist/js/select2.min.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ asset('vendor/bgrins-spectrum/spectrum.js') }}"></script>
    <script src="{{ asset('vendor/smartmenus-1.1.0/jquery.smartmenus.min.js') }}"></script>
    <script src="{{ asset('vendor/echarts/echarts-en.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>


    <script src="{{ asset('vendor/leaflet/leaflet.js') }}"></script>
    <script src="{{ asset('vendor/leaflet/Label.js') }}"></script>
    <script src="{{ asset('js/leafletMain.js') }}"></script>




{% endblock %}
</body>
</html>
